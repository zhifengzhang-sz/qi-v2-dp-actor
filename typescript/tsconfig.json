{
  "compilerOptions": {
    // Modern TypeScript target and module system
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],

    // Strict type checking for financial data safety
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,

    // Advanced type features for DSL implementation
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,

    // Output configuration
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,

    // Module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // Vitest globals support
    "types": ["vitest/globals"],

    // Path mapping for QiCore namespace
    "baseUrl": ".",
    "paths": {
      "@qi/base": ["../../qi-v2-qicore/typescript/dist/base.d.ts"],
      "@qi/core": ["../../qi-v2-qicore/typescript/dist/core.d.ts"],
      "@qi/dp/dsl": ["lib/dsl/src/*"],
      "@qi/dp/md": ["lib/md/src/*"],
      "@qi/dp/utils": ["lib/utils/src/*"],
      "@qi/dp/base": ["lib/base/src/*"],
      "@qi/dp/actor": ["lib/actor/src/*"],
      "@qi/dp/generic": ["lib/generic/src/*"],
      "@qi/dp/mcp": ["lib/mcp/src/*"]
    },

    // Skip lib checking for faster builds
    "skipLibCheck": true,

    // Emit configuration
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Project references configuration (disabled for build)
    "composite": false
  },
  "include": ["lib/*/src/**/*"],
  "exclude": ["node_modules", "dist", "docs", "lib/*/tests"],
  "ts-node": {
    "esm": true,
    "swc": true
  }
}
